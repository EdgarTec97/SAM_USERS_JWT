{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/node_modules/@general",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "include": ["build/**/*"]
}
